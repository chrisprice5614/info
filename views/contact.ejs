
<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header") %>
    </header>
    <main class="main">
        <% if(typeof error !== "undefined") { %>
            <br>
            <h1 style="text-align: center; padding: 8px; border: solid 2px #F00; border-radius: 8px;"><%= error %></h1>
            <br>
        <% } %>
        <br>
        <h1 style="text-align: center;">Contact</h1>
        <br>
        <br>
        <form method="POST" action="/contact">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="First and Last Name" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="john@email.com" required>

            <label for="message">Your Message</label>
            <textarea id="message" name="message" rows="6" placeholder="Type your message here." required></textarea>

            <br>
            <div class="g-recaptcha" data-sitekey="6Lchm2ErAAAAAGGXkJ9ane8BFngVnsa8tXF_PofO"></div>
            <br>
            <button type="submit">Submit</button>
        </form>
    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>
</html>
