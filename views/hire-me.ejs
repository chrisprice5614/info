
<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header", {header: "programming"}) %>
    </header>
    <main class="main">
        <% if(typeof error !== "undefined") { %>
            <br>
            <h1 style="text-align: center; padding: 8px; border: solid 2px #F00; border-radius: 8px;"><%= error %></h1>
            <br>
        <% } %>
        <br>
        <h1 style="text-align: center;">Hire Me</h1>
        <br>
        <div style="margin: 16px">
            <p>Let me build whatever you need!</p>
        </div>
        <br>
        <form method="POST" action="/hire-me">
            <h2>Programming Inquiry</h2>

            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" placeholder="First and Last Name" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="your@email.com" required>

            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="(555) - 555 - 5555" required>

            <label for="budget">Budget</label>
            <input type="text" id="budget" name="budget" placeholder="$100â€“$2000" required>

            <label for="message">Message</label>
            <textarea id="message" name="message" rows="6" placeholder="Tell us what you're looking for, performance details, length, instrumentation, etc." required></textarea>

            <br>
            <div class="g-recaptcha" data-sitekey="6Lchm2ErAAAAAGGXkJ9ane8BFngVnsa8tXF_PofO"></div>
            <br>
            <button type="submit">Submit</button>
        </form>
    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>
</html>
