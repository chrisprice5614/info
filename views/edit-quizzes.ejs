<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header", {header: "music"}) %>
    </header>
    <main class="main">
        <br>
        <h1 style="text-align: center;">Edit quizzes</h1>
        <br>
        <div style="text-align: center;">
            <a href="/add-quiz"><button>Add New quiz</button></a>
        </div>
        <br>

        <% if(quizzes.length > 0) { %>
            <% quizzes.forEach(quiz => {
                if (1 == 1) { 
            %>
                <div class="card" style="cursor: pointer;" onclick="window.location.href='/edit-quiz/<%= quiz.id %>'">
                    <div style="display: grid; grid-template-columns: 3fr 1fr; column-gap: 8px;">
                        <div>
                            <h2><%= quiz.title %></h2>
                            <p><%= quiz.description.substring(0, 40) %>...</p>
                            <a href="/delete-quiz/<%= quiz.id %>"><button>Delete Quiz</button></a>
                        </div>
                        <div>
                            <img src="<%= quiz.heroImage %>" alt="" style="width: 100%; height: 112px; object-fit: cover;">
                        </div>
                    </div>
                </div>
            <%  } 
            }) %>
        <% } else { %>
            <p>No quizzes found.</p>
        <% } %>
    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>
</html>