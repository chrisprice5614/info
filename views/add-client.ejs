<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header") %>
    </header>
    <main class="main">
        <br>
        <h1 style="text-align: center;">
            Add Client
        </h1>
        <br>
        <form action="/add-client" method="POST">
            <label for="firstname">First Name</label>
            <input type="text" id="firstname" name="firstname" placeholder="John" required>

            <label for="lastname">Last Name</label>
            <input type="text" id="lastname" name="lastname" placeholder="Doe" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="john@gmail.com" required>

            <label for="phone">Phone</label>
            <input type="text" id="phone" name="phone" placeholder="(509) 555 - 1234" required>

            <label for="address">Address</label>
            <textarea id="address" name="address" placeholder="123 Fake Street" required></textarea>

            <br><br>

            <button type="submit">Add Client</button>

        </form>

    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>
</html>