<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header", {header: "programming"}) %>
    </header>
    <main class="main">
        <br>
        <h1 style="text-align: center;">Edit Programming Projects</h1>
        <br>
        <div style="text-align: center;">
            <a href="/add-project"><button>Add New Project</button></a>
        </div>
        <br>

        <% if (projects.length > 0) { %>
            <% projects.forEach(project => { %>
                <div 
                    class="card"
                    style="
                        position: relative;
                        cursor: pointer;
                        background-image: url('<%= project.hero %>');
                        background-size: cover;
                        background-position: center;
                        height: 64px;
                        border-radius: 12px;
                        overflow: hidden;
                        margin-bottom: 12px;
                    "
                    onclick="window.location.href='/edit-project/<%= project.id %>'"
                >
                    <!-- Dark overlay -->
                    <div style="
                        position: absolute;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        background: rgba(0, 0, 0, 0.25); /* adjust opacity as needed */
                    "></div>

                    <!-- Text content -->
                     <div style="display: grid; grid-template-columns: 3fr 1fr;">
                        <h1 style="
                            position: relative;
                            margin: 0;
                            padding-left: 16px;
                            line-height: 64px;
                            color: white;
                            font-size: 2.25rem;
                            text-shadow: 0 0 4px rgba(0, 0, 0, 0.8);
                        ">
                            <%= project.title %>
                        </h1>
                        <div style="text-align: center;">
                            <a href="/delete-project/<%= project.id %>"><button>Delete</button></a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p style="margin-left: 16px;">No projects found.</p>
        <% } %>

    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>
</html>