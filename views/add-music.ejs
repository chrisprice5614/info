<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header", {header: "music"}) %>
    </header>
    <main class="main">
        <br>
        <h1 style="text-align: center;">Add Music</h1>
        <br>
        <form method="POST" action="/add-music" enctype="multipart/form-data" style="margin: 24px;">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>

            <label for="link">Upload Audio File</label>
            <input type="file" id="link" name="link" accept=".mp3" required>

            <label for="ensemble">Ensemble</label>
            <input type="text" id="ensemble" name="ensemble" required>

            <label for="type">Type</label>
            <input type="text" id="type" name="type" required>

            <button type="submit">Add Music</button>
        </form>
    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>
</html>
