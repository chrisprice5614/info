<html class="home">
<head>
    <%- include("includes/head") %>
</head>
<body>
    <header>
        <%- include("includes/header") %>
    </header>
    <main class="main">
        <div style="padding: 8px;">
            <br>
            <h1 style="text-align: center;">View Orders</h1>
            <% if(orders.length> 0) { %>
                <% orders.forEach(order => { %>
                    <div class="card" style="cursor: pointer;" onclick="window.location='/order/<%= order.id %>'">
                        <h1><%= order.id %> - <%= order.name %> - <%= new Date(order.created_at).toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></h1>
                        <p> <%= (order.total_price).toLocaleString('en-US', { style: 'currency', currency: 'USD' }) %> - <%= order.shipping_address %></p>
                        <p <% if(order.status == "Placed") {%> style="color: red" <% } %> <% if(order.status == "Delivered") {%> style="color: lime;" <% } %>><%= order.status %></p>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>



</html>
