<html class="home">
<head>
    <%- include("includes/head") %>
    <title><%= quiz.title %> | Chris Price</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="<%= quiz.description.replace(/(<([^>]+)>)/gi, '').slice(0, 150) %>..." />
    <meta name="author" content="Chris Price" />
    <meta name="keywords" content="quiz, Chris Price, <%= quiz.title.split(' ').join(', ') %>" />
    <link rel="canonical" href="https://info.chrispricemusic.net/quiz/<%= quiz.slug %>" />

    <!-- Open Graph (Facebook, LinkedIn) -->
    <meta property="og:title" content="<%= quiz.title %>" />
    <meta property="og:description" content="<%= type === 'personality' && result ? 'You are: ' + result.value + ' — ' + result.description.slice(0, 100) : 'Score: ' + score %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://info.chrispricemusic.net/quiz/<%= quiz.slug %>" />
    <% if (type === 'knowledge') { %>
    <meta property="og:image" content="https://info.chrispricemusic.net/<%= quiz.heroImage %>" />
    <% } else if (type === 'personality' && result && result.image) { %>
    <meta property="og:image" content="https://info.chrispricemusic.net/<%= result.image %>" />
    <% } else { %>
    <meta property="og:image" content="https://info.chrispricemusic.net/<%= quiz.heroImage %>" />
    <% } %>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="<%= quiz.title %>" />
    <meta name="twitter:description" content="<%= type === 'personality' && result ? 'You are: ' + result.value + ' — ' + result.description.slice(0, 100) : 'Score: ' + score %>" />
    <% if (type === 'knowledge') { %>
    <meta property="og:image" content="https://info.chrispricemusic.net/<%= quiz.heroImage %>" />
    <% } else if (type === 'personality' && result && result.image) { %>
    <meta property="og:image" content="https://info.chrispricemusic.net/<%= result.image %>" />
    <% } else { %>
    <meta property="og:image" content="https://info.chrispricemusic.net/<%= quiz.heroImage %>" />
    <% } %>

    <style>
    .share-icons {
      padding: 1rem;
      margin-top: 0.25rem;
      align-items: center;
    }

    .share-icons ion-icon {
      font-size: 24px;
      color: #444;
      transition: color 0.2s;
      cursor: pointer;
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .share-icons ion-icon:hover {
      color: #007bff;
    }

  </style>
</head>
<body>
    <header>
        <%- include("includes/header") %>
    </header>
    <main class="main" style="text-align: center;">
        <div style="position: relative; background: 
        linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), 
        url('<%= quiz.heroImage %>') center/cover no-repeat; 
        padding: 2rem;">
        <h1 style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8); margin: 0; color: fff; text-align: center; font-size: 2rem; padding: 24px 0;">
          <%= quiz.title %>
        </h1>
      </div>
      <br>


        <% if (type === 'knowledge') { %>
            <h2>You scored: <%= score %></h2>
            <p>You got <%= correct %> out of <%= total %> correct.</p>
        <% } else if (type === 'personality' && result) { %>
            <h2>You are: <%= result.value %>!</h2>
            <p><%= result.description %></p>
        <% } else if (error) { %>
            <p><%= error %></p>
        <% } %>

        <br>
        <% if(type == "personality") { %>
            <div style="text-align: center;">
                <img src="<%= result.image %>" alt="Quiz result" style="width: 40%;">
            </div>
        <% } %>

        <!-- Share Buttons -->
        <div class="share-buttons" style="margin-top: 2rem;">
            <h3>Share your result:</h3>

            <div class="share-icons" style="text-align: center;">
                <ion-icon name="logo-facebook" onclick="share('facebook')"></ion-icon>
                <ion-icon name="logo-twitter" onclick="share('twitter')"></ion-icon>
                <ion-icon name="logo-reddit" onclick="share('reddit')"></ion-icon>
                <ion-icon name="logo-whatsapp" onclick="share('whatsapp')"></ion-icon>
                <ion-icon name="copy-outline" onclick="copyLink()"></ion-icon>
            </div>

            
        </div>

    </main>
    <footer>
        <%- include("includes/footer") %>
    </footer>
</body>

<script>
  const quizTitle = "<%= quiz.title.replace(/"/g, '\\"') %>";
  const quizSlug = "<%= quiz.slug %>";
  const resultText = `<% if (type === 'personality' && result) { %>
    I got "<%= result.value %>" on "<%= quiz.title %>": <%= result.description.replace(/"/g, '\\"') %>
  <% } else if (type === 'knowledge') { %>
    I scored <%= score %> on "<%= quiz.title %>"
  <% } %>`.replace(/\s+/g, ' ').trim();

  const quizUrl = `https://info.chrispricemusic.net/quiz/${quizSlug}`;
  const shareMessage = `${resultText}\n\nTake the quiz: ${quizUrl}`;

  function share(platform) {
    let url = '';

    switch (platform) {
      case 'facebook':
        url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(quizUrl)}&quote=${encodeURIComponent(resultText)}`;
        break;
      case 'twitter':
        url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(resultText)}&url=${encodeURIComponent(quizUrl)}`;
        break;
      case 'reddit':
        url = `https://www.reddit.com/submit?url=${encodeURIComponent(quizUrl)}&title=${encodeURIComponent(resultText)}`;
        break;
      case 'whatsapp':
        url = `https://wa.me/?text=${encodeURIComponent(shareMessage)}`;
        break;
    }

    if (url) {
      window.open(url, '_blank');
    }
  }

  function copyLink() {
    navigator.clipboard.writeText(shareMessage)
      .then(() => {
        document.getElementById('copyStatus').textContent = 'Link copied!';
      })
      .catch(err => {
        document.getElementById('copyStatus').textContent = 'Failed to copy.';
        console.error(err);
      });
  }
</script>


</html>

